@model WebsiteHotel.Pages.ContactModel
@{
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Swoose Travel Company | Travel Company </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Style+Script&display=swap" rel="stylesheet">
    <title> Swoose Travel Company | Travel Company </title>
    <link rel="stylesheet" href="~/css/ContactStyle.css" />
</head>

<body>

    <section id="contactInfo">
        <header class="contactInfo-head">

            <br /><br /><h1> Contact </h1>
        </header>
    </section>



    <section id="userQuestions">
        <header class="userQuestions-head">
            <h4>
                <br /> Questions? Lets Chat Today.  <br />
            </h4>
            <hr class="section-break">
            <h3>
                <br /> Have a questions? <a href="/Questions">Check out our FAQ page.</a> <br /> <br />
            </h3>

            <hr class="section-break">
            <h3>
                <br /> Wanna chat on the phone? We are avalible Monday-Friday, 9AM-4PM EST: (555) 589-4900‬ <br /> <br />
            </h3>

            <hr class="section-break">
            <h3>
                <br /> Send Us A Message Instead!
            </h3>

        </header>
    </section>

    <section id="contact">
        <div class="form-wrapper">
            <header class="form-head">
                <h2>Send your message here</h2>
            </header>
            <form action="https://formspree.io/mzbbyqbo" method="POST">
                <div class="name-form">
                    <label for="name">Name:</label>
                    <input id="name" type="text" name="name" required minlength="4" />
                </div>
                <div class="email-form">
                    <label for="email">Email:</label>
                    <input id="email" type="email" required name="_replyto" />
                </div>
                <div class="message-form">
                    <label for="subject"></label>
                    <textarea id="subject" name="subject" placeholder="Write Your Message Here.." style="height:200px"></textarea>
                </div>
                <button value="Send" type="submit">Submit</button>
            </form>
        </div>
    </section>



    <footer>
        <div class="footer-wrapper">
            <h5>Swoose Travel Company &copy;</h5>
            <ul>
                <li>
                    <a href="https://twitter.com/?lang=en" title="twitter-social-media">
                        <img src="./icons/twitter.svg" alt="twitter-social-media" />
                    </a>
                </li>
                <li>
                    <a href="https://www.youtube.com/" title="youtube-social-media">
                        <img src="./icons/youtube.svg" alt="youtube-social-media" />
                    </a>
                </li>
                <li>
                    <a href="https://www.instagram.com/" title="instagram-social-media">
                        <img src="./icons/instagram.svg" alt="instagram-social-media" />
                    </a>
                </li>
            </ul>
        </div>
    </footer>





    @*Resize*@
    <style>

        .body-container {
            /*remove the container default padding attribute*/
            padding-left: 0px !important;
            padding-right: 0px !important;
            /*increase width as per your need*/
            max-width: 100%;
        }
    </style>

</body>
</html>
